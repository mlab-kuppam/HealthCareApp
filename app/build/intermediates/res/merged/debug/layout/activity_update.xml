<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pes.mlab.newhealthcareapp.UpdateActivity">


    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="ORAL"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/oral"
        android:drawableLeft="@drawable/ic_mood_black_36dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:onClick="CHANGE"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="EYE"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/eye"
        android:drawableLeft="@drawable/ic_remove_red_eye_black_36dp"
        android:layout_below="@+id/oral"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="ENT"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/ent"
        android:drawableLeft="@drawable/ic_hearing_black_36dp"
        android:layout_below="@+id/eye"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="SKIN"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/skin"
        android:drawableLeft="@drawable/ic_person_outline_black_36dp"
        android:layout_below="@+id/ent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>


    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="SYSTEMIC ANALYSIS I"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/sys_one"
        android:drawableLeft="@drawable/ic_assessment_black_36dp"
        android:layout_below="@+id/skin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="SYSTEMIC ANALYSIS II"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/sys_two"
        android:drawableLeft="@drawable/ic_assessment_black_36dp"
        android:layout_below="@+id/sys_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="Health"
        android:textSize="25dp"
        android:typeface="sans"
        android:id="@+id/health"
        android:drawableLeft="@drawable/ic_assessment_black_36dp"
        android:layout_below="@+id/sys_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="CHANGE"/>

</RelativeLayout>
